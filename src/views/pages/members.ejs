<!doctype html>
<html lang="en">

<head>

    <%- include('../partials/head'); %>
        <%- include('../partials/pages_with_tables'); %>
</head>

<body>

    <div class="wrapper">
        <%- include('../partials/sidebar'); %>


            <div class="main-panel">
                <nav class="navbar navbar-default navbar-fixed">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <%- include('../partials/hidden_button'); %>

                                <a class="navbar-brand" href="#">People</a>
                        </div>
                        <div class="collapse navbar-collapse">
                            <%- include('../partials/hidden_search'); %>

                                <%- include('../partials/logout'); %>
                        </div>
                    </div>
                </nav>


                <div class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="header">
                                        <!-- <h4 class="title">Members</h4> -->
                                        <div class="row">
                                            <div class="col-md-8">
                                                <!--  <% if(typeof success !=="undefined" ) { %>
                                                    <div class="alert alert-success" role="alert">
                                                        <p>Successful!</p>
                                                    </div>
                                                    <% } %>
 -->
                                            </div>
                                            <div class="col-md-4">
                                                <div>
                                                    <a class="add-button" href="/addmember">
                                                        <span class="glyphicon glyphicon-plus"
                                                            style="font-weight:800; padding-right: 0.4em;"> </span>
                                                        <span class="add-button-text">Add member</span>
                                                    </a>
                                                </div>
                                            </div>

                                        </div>


                                    </div>


                                    <div class="content table-responsive table-full-width">
                                        <% if(typeof members !=="undefined" ) { %>
                                            
                                                <table class="table table-hover table-striped">
                                                    <thead>
                                                        <th>Pic</th>
                                                        <th>Name</th>
                                                        <th>Phone</th>
                                                        <th>Email</th>
                                                        <th>Address</th>
                                                    </thead>
                                                    <tbody>
                                                        <% members.forEach((member)=>{ %>
                                                        <tr>
                                                            <td><img src=<%=member.passport %> alt="img"></td>
                                                            <td>
                                                                <a href="/member/<%=member.member_id %>">
                                                                    <%= member.person %>
                                                                </a>
                                                            </td>
                                                            <td>
                                                                <%= member.phone %>
                                                            </td>
                                                            <td>
                                                                <%= member.email %>
                                                            </td>
                                                            <td>
                                                                <%= member.address %>
                                                            </td>
                                                        </tr>
                                                        <% }); %>

                                                    </tbody>
                                                </table>
                                                
                                                    <% } %>

                                                        <div class="container footer">
                                                            <br>
                                                            <hr>
                                                            <div class="stats">
                                                                <!-- <i class="fa fa-clock-o"></i> Summary -->
                                                            </div>
                                                        </div>

                                    </div>

                                </div>
                            </div>


                        </div>
                    </div>
                </div>

            </div>
    </div>

